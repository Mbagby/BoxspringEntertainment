.dashboard-page
  .col-sm-3.side_nav
    = render "left_side_dashboard"
  .col-sm-9.groups-page
    .row
      .col-sm-12.content-header
        %label alerts - messages - ad space
    .row.page-content
      .col-sm-12
        %h1.page-title Groups
        = link_to 'Create Group', new_group_path, class: 'btn btn-default pull-right'
    %div.clearfix
    %div.row.groups
      .col-sm-12{style:"margin-top:25px;"}
        %table.table.table-responsive.table-striped.table-bordered
          %thead
            %tr
              %th HR Manager
              %th Name
          %tbody
            - @groups.each do |group|
              %tr
                %td
                  = group.hr_manager.email if group.persisted?
                %td
                  = group.name if group.persisted?
        = paginate @groups
