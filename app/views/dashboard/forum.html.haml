.dashboard-page
  .col-sm-4
    = render "left_side_dashboard"
  .col-sm-8
    .row
      .col-sm-12.content-header
        %label alerts - messages - ad space
    .row.forum-content
      .col-sm-12
        %h1.forum-title Message Boards
      - Category.all.each do |cat|
        .col-sm-8.forum-item
          %h3= cat.title
        .col-sm-4.forum-item
          %label
            = cat.messages.count
            comments
