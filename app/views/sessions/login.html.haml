!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title BoxSpring Entertainment
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
  %body
    .pictureBackground
      .ui.center.aligned.grid
        #pageContent.alligned
          .ui.large.form
            = form_tag login_path do
              #loginSignupHead.content
                Login To Your Account
              .ui.stacked.segment
                .field
                  #colorFix.ui.left.icon.input
                    = text_field_tag :email, nil, :placeholder=>'Email'
                    %i.user.icon
                .field
                  #colorFix.ui.left.icon.input
                    = password_field_tag :password, nil, :placeholder=> "Password"
                    %i.lock.icon
                %p= link_to "Forgot your password?", new_reset_path
                %div
                  = submit_tag "Log In", id: "loginButton",class: "ui fluid large submit button"
                %div