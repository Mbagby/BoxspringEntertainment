#topMenu.pusher
  %nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        = link_to root_path, class: "navbar-brand" do
          = image_tag "BoxSpringLogo.jpg", class: "img-responsive", width:36
          BoxSpring
      %ul.nav.navbar-nav
        %li
          .ui.large.secondary.network.menu
            #browse.view-ui.item.fitted
              .ui.simple.dropdown.item
                %i.sidebar.icon
                Browse
                .menu{style:"margin-top:0px;"}
                  - Category.all.each do |category|
                    = link_to category.title, category_path(category), class: "item"
        %li
          %a{:href => "#"} Page 2
      %ul.nav.navbar-nav.navbar-right
        %li
          .ui.large.secondary.network.menu
            .ui.simple.dropdown.item
              %i.user.icon
              %span{style:"margin-right:5px;"}= current_user.first_name
              %span.hidden-xs= current_user.last_name
              %i.dropdown.icon
              .menu{style:"margin-top:0px;"}
                = link_to "Dashboard", dashboard_index_path, class: "item"
                = link_to "Profile", profile_user_path(current_user), class: "item"
                = link_to "Assignments", assignments_path, class: "item"
                = link_to "About Us", about_us_path, class: "item"
                = link_to "Logout", destroy_user_session_path, method: :delete, class: "item"
